{
  "name": "@tb-dev/vndb",
  "version": "1.7.41",
  "description": "Custom query builder for VNDB",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@9.0.6",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
    "url": "https://tb.dev.br"
  },
  "homepage": "https://tb.dev.br/vndb",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ferreira-tb/vndb.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/vndb/issues",
    "email": "andrew.shien2@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "vndb",
    "api",
    "http",
    "kana",
    "query builder",
    "visual novel"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "vite build",
    "deploy": "pnpm run docs:build && pnpm run docs:typedoc",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:typedoc": "typedoc --plugin typedoc-plugin-mdn-links",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky",
    "release": "pnpm run type-check && pnpm run build && pnpm publish",
    "test": "vitest",
    "test:ui": "vitest --ui --watch --coverage.enabled=true",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^3.4.0",
    "@tb-dev/utility-types": "^1.2.7",
    "@tb-dev/utils": "^1.5.2",
    "@types/node": "^20.12.7",
    "@vitest/coverage-istanbul": "^1.5.2",
    "@vitest/ui": "^1.5.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.13",
    "typedoc-plugin-mdn-links": "^3.1.23",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-dts": "^3.9.0",
    "vitepress": "^1.1.4",
    "vitest": "^1.5.2",
    "zod": "^3.23.5"
  }
}
